<?xml version="1.0" encoding="UTF-8"?>
<configs>
    <!-- Summon whistle that spawns the companion dire wolf -->
    <append xpath="/items">
        <item name="toolWolfWhistle">
            <property name="Tags" value="tool"/>
            <property name="CustomIcon" value="direWolfWhistle" />
            <property name="HoldType" value="40"/>
            <property name="DisplayType" value="tool"/>
            <property name="Meshfile" value="@:Other/Items/Misc/whistlePrefab.prefab"/>
            <property name="Material" value="Mmetal"/>
            <property name="Stacknumber" value="1"/>
            <property name="EconomicValue" value="1000"/>
            <property class="Action0">
                <property name="Class" value="SpawnEntity"/>
                <property name="Entity" value="companionDireWolf"/>
                <property name="EntityOffset" value="0,0,1"/>
            </property>
            <property name="Group" value="Tools/Traps"/>
        </item>
        <item name="toolBearWhistle">
            <property name="Tags" value="tool"/>
            <property name="CustomIcon" value="direWolfFang" />
            <property name="HoldType" value="40"/>
            <property name="DisplayType" value="tool"/>
            <property name="Meshfile" value="@:Other/Items/Misc/whistlePrefab.prefab"/>
            <property name="Material" value="Mmetal"/>
            <property name="Stacknumber" value="1"/>
            <property name="EconomicValue" value="1000"/>
            <property class="Action0">
                <property name="Class" value="SpawnEntity"/>
                <property name="Entity" value="companionBear"/>
                <property name="EntityOffset" value="0,0,1"/>
            </property>
            <property name="Group" value="Tools/Traps"/>
        </item>
    </append>
</configs>

